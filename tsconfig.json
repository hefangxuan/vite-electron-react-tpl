{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "../types/env",
      "vite/client"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@renderer/*": [
        "./src/renderer/*"
      ],
      "@main/*": [
        "./src/main/*"
      ],
      "@preload/*": [
        "./src/preload/*"
      ],
      "@common/*": [
        "./src/common/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "sourceMap": true
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "./src/renderer"
  ]
}
